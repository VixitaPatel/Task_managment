<body>
	<div class="wrapper">
		<div class="wrapper_inner">
			<div class="vertical_wrap">
			<div class="backdrop"></div>
			<div class="vertical_bar">
				<div class="profile_info">
					<div class="img_holder">
						<img src="https://static.thenounproject.com/png/2303078-200.png" alt="profile_pic">
					</div>
					<p class="title"><%= user.name%></p>
					<p class="sub_title"><%= user.email%></p>
				</div>
				<ul class="menu">
					<li><a href="/admin-profile">
						<span class="icon"><i class="fas fa-home"></i></span>
						<span class="text">Your Profile</span>
					</a></li>
					<li><a href="/viewtask">
						<span class="icon"><i class="fas fa-file-alt"></i></span>
						<span class="text">Assign tasks</span>
					</a></li>
					<li><a href="/varifytask">
						<span class="icon"><i class="fa fa-tasks" aria-hidden="true"></i></span>
						<span class="text">Verify tasks</span>
					</a></li>
					<li><a href="/pendingtask">
						<span class="icon"><i class="fas fa-chart-pie"></i></span>
						<span class="text">Pending tasks</span>
					</a></li>
					<li><a href="/completedtask">
						<span class="icon"><i class="fa fa-list" aria-hidden="true"></i></span>
						<span class="text">Completed tasks</span>
					</a></li>
                    <li><a href="/updateadmin">
						<span class="icon"><i class="fa fa-user" aria-hidden="true"></i></span>
						<span class="text">Update Profile</span>
					</a></li>
                    <li><a href="/changepwdadmin">
						<span class="icon"><i class="fa fa-lock"></i></span>
						<span class="text">Change Password</span>
					</a></li>
                    <li><a href="/logoutadmin">
						<span class="icon"><i class="fa fa-power-off" aria-hidden="true"></i></span>
						<span class="text">Logout</span>
					</a></li>
				</ul>
				
			</div>
		</div>
		<div class="main_container">
			<div class="top_bar">
				<div class="hamburger">
					<i class="fas fa-bars"></i>
				</div>
				<div class="logo">
					Task <span>Management System</span>
				</div>
			</div>

			<div class="container" id="card-container">
				<div class="cardtemplate">
                    <div class="sign">
                        <a href="/assigntask"><i class="fa fa-plus-circle" aria-hidden="true"></i></a>
                    </div>
                    <div class="t">
                        <a href="/assigntask">Add Text</a>
                    </div>
                </div>
				<% assignments.forEach(assignment => { %>
					<div class="cardtemplate">
						<div class="name"><%= assignment.title %></div>
						<div class="assigned_to">Assigned To: <%= assignment.assignedTo.name %> </div>
						<div class="description"><%= assignment.description %></div>
						
					</div>
				<% }); %>
			</div>
		</div>
		</div>
	</div>

