  <body>
    <section class="container">
      <header>Forgot Password</header>
      <form action="/varifyotpadmin" method="post" class="form" onsubmit="validateForm()">
        <div class="input-box">
            <div class="text">
                <label>Enter the OTP sent to your registered Email to proceed further</label>
            </div>
            <input type="number" id="otp" name="otp" placeholder="Enter OTP" class="in" required/>
        </div>
        
        <button type="submit">Verify OTP</button>
      </form>
    </section>
  </body>
